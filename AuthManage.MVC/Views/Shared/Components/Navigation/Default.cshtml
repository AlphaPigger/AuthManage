                    case "硬件管理":
                        <li>
                            <a href="@menu.Address">
                                <i class="glyphicon glyphicon-screenshot"></i>
                                @menu.Name
                            </a>
                        </li>
                        break;
                    case "条目管理":
                        <li>
                            <a href="@menu.Address">
                                <i class="glyphicon glyphicon-list-alt"></i>
