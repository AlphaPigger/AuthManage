
@{
    ViewData["Title"] = "修改用户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AuthManage.Application.DTOModel.UserDto

<!--引入select2插件相关-->
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.css" />
<script src="~/lib/select2/dist/js/select2.js"></script>

<div class="main sidebar-minified">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-align-left red"></i><strong>修改</strong>
        </div>
        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-sm", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-sm", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PostType, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.PostType, ViewData["PostTypes"] as List<SelectListItem>, "请选择", new { @id = "PostTypes", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.PostType, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Department, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.Department, ViewData["Departments"] as List<SelectListItem>, "请选择", new { @id = "Departments", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Roles, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.Roles, ViewData["Roles"] as List<SelectListItem>,"请选择", new { @id = "Roles", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "red" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-sm btn-success" style="margin-left:250px"><i class="glyphicon glyphicon-record"></i>确认</button>
                <button type="reset" class="btn btn-sm btn-danger" style="margin-left:50px"><i class="glyphicon glyphicon-ban-circle"></i>重置</button>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    //引用select2插件
    $("#PostTypes").select2();
    $("#Departments").select2();
    $("#Roles").select2(
        {
            //开启多选功能
            multiple: true,
            //限制最多选择项数目
            maximumSelectionLength:3
        }
    );
</script>

