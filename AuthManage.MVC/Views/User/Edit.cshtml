
@{
    ViewData["Title"] = "修改用户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AuthManage.Application.DTOModel.UserDto

<div class="main sidebar-minified">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-align-left red"></i><strong>修改</strong>
        </div>
        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ID)
            <div class="form-horizontal">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PostType, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.PasswordFor(model => model.PostType, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.PostType, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Department, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.PasswordFor(model => model.Department, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Roles, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.PasswordFor(model => model.Roles, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "red" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button type="submit" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-record"></i>确认</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button type="reset" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-ban-circle"></i>重置</button>
            </div>
        }
    </div>
</div>

