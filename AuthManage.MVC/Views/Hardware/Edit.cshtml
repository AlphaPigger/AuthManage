
@{
    ViewData["Title"] = "硬件修改";
}

@model AuthManage.Application.DTOModel.BusinessModel.HardwareDto
<!--引入select2插件相关-->
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.css" />
<script src="~/lib/select2/dist/js/select2.js"></script>

<div class="main sidebar-minified">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-align-left red"></i><strong>创建</strong>
        </div>
        @using (Html.BeginForm("Edit", "Hardware", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-sm", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Number, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.TextBoxFor(m => m.Number, new { @class = "form-control input-sm", @style = "width:350px" })
                            @Html.ValidationMessageFor(m => m.Number, "", new { @class = "red" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Project, new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.Project, ViewData["Projects"] as List<SelectListItem>, new { @id = "Projects", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.Project, "", new { @class = "red" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-sm btn-success" style="margin-left:250px"><i class="glyphicon glyphicon-record"></i>确认</button>
                <button type="reset" class="btn btn-sm btn-danger" style="margin-left:50px"><i class="glyphicon glyphicon-ban-circle"></i>重置</button>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    //引用select2插件
    $("#Projects").select2();
</script>

